 
<table class="forumline" width="100%" cellspacing="1" cellpadding="3" border="0">
  <tr align="right"> 
    <td class="catHead" height="28"></td>
  </tr>
  <!-- BEGIN postrow --> 
  <tr> 
    <td class="{postrow.ROW_CLASS}" width="100%" height="28" valign="top">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
		<tr> 
          <td colspan="2"><span class="postbody">{postrow.MESSAGE}</span></td>
        </tr>
		<tr> 
          <td colspan="2">
            <hr />
          </td>
        </tr>
        <tr> 
          <td width="100%"><span class="postdetails">{L_POSTED}: 
            {postrow.POST_DATE}</span></td>
        </tr>
      </table>
    </td>
  </tr>
  <tr> 
    <td class="spaceRow" colspan="2" height="1"><img src="templates/subSilver/images/spacer.gif" alt="" width="1" height="1" /></td>
  </tr>
  <!-- END postrow --> 
</table>

<table width="100%" cellspacing="2" cellpadding="2" border="0" align="center">
  <tr> 
	<td align="right" valign="top" nowrap><span class="nav">{PAGINATION}</span> 
	  </td>
  </tr>
  <tr>
	<td align="left" colspan="3"><span class="nav">{PAGE_NUMBER}</span></td>
  </tr>
</table>

